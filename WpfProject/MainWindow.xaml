<Window x:Class="WpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"        
        Title="Logga in" Height="350" Width="400">
    <StackPanel Orientation="Vertical">
        <StackPanel HorizontalAlignment="Center" Width="200" Margin="80">
            <Label Content="Användarnamn"/>
            <TextBox x:Name="txtUserName" TextChanged="txtUserName_TextChanged"></TextBox>
            <Label Content="Lösenord"/>
            <PasswordBox x:Name="txtPassword" PasswordChanged="txtPassword_PasswordChanged"></PasswordBox>
            <Button x:Name="LoginButton" Content="Logga in" Margin="0,10" Click="LoginButton_Click">
            </Button>
        </StackPanel>
        
    </StackPanel>
</Window>
