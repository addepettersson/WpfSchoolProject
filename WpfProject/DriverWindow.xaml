<Window x:Class="WpfProject.DriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        Title="Chaufför sida" Height="300" Width="300">
    <StackPanel>
        <Button x:Name="btnCreateJournal" Content="Lägg till körjournal" Width="110" Click="btnCreateJournal_Click" />
        <Button x:Name="btnShowJournal" Content="Se min snittförbrukning på fordon" Width="200" Margin="0,10" Click="btnShowJournal_Click"/>
        <Button Content="Se förbrukning och kostnad i snitt!" Width="200" Click="Button_Click"/>
    </StackPanel>
</Window>
